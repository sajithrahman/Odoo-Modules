<odoo>
    <data>
        <record id="view_res_config_settings_sale_extended" model="ir.ui.view">
            <field name="name">res.config.settings.sale.extended</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='show_margins']" position="after">
                    <setting id="sale_order_limit"
                             help="Set a Sale order limit for got a approve from sale admin if sale value is higher than the given value">
                        <div>
                            <label for="sale_order_limit" class="o_light_label me-2"/>
                            <field name="sale_order_limit" class="oe_inline" force_save="1"/>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>